programa factorial;

entero funcion fact_iterativo(entero var){
  entero acum;
  acum = var;
  mientras ( var > 1) {
    var = var - 1;
    acum = acum * (var);
  }
  regresa acum;
}

entero funcion fact_recursivo(entero var) {
  si (var > 1) {
    regresa var * fact_recursivo(var - 1);
  }
  regresa 1;
}

principal(){
  entero fact;
  fact = 6;
  escribe("iterativo", fact_iterativo(fact));
  escribe("recursivo", fact_recursivo(fact));
}
